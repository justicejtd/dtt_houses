<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clAbout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:fitsSystemWindows="true"
    android:theme="@style/GothamBookBody">

    <TextView
        android:id="@+id/tvTitleAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_extra_large"
        android:layout_marginTop="@dimen/size_huge"
        android:text="@string/about"
        android:theme="@style/GothamBookTitle01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAboutDescription"
        android:layout_width="@dimen/size_zero"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_extra_large"
        android:layout_marginTop="@dimen/size_extra_large"
        android:layout_marginEnd="@dimen/size_extra_large"
        android:fontFamily="@font/gotham_ssm_book"
        android:text="@string/mockup_text"
        android:theme="@style/GothamBookBody"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleAbout" />

    <TextView
        android:id="@+id/tvTitleDesignAndDevelopment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_extra_large"
        android:layout_marginTop="@dimen/size_extra_large"
        android:text="@string/design_and_development"
        android:theme="@style/GothamBookTitle01"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAboutDescription" />

    <ImageView
        android:id="@+id/ivDttBanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_extra_large"
        android:layout_marginTop="@dimen/size_extra_large"
        android:contentDescription="@string/dtt_banner"
        android:src="@drawable/dtt_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleDesignAndDevelopment"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_extra_large"
        android:layout_marginTop="@dimen/size_medium"
        android:fontFamily="@font/gotham_ssm_book"
        android:text="@string/by_dtt"
        android:theme="@style/GothamBookTitle02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ivDttBanner"
        app:layout_constraintTop_toTopOf="@+id/ivDttBanner" />

    <TextView
        android:id="@+id/tvLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_small"
        android:text="@string/d_tt_nl"
        android:textColorLink="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/ivDttBanner"
        app:layout_constraintEnd_toEndOf="@+id/tvAuthor"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvAuthor"
        app:layout_constraintTop_toBottomOf="@+id/tvAuthor"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>