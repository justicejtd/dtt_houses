<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clViewSearchNotFound"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivSearchNotFound"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="@string/search_not_found_image"
        android:src="@drawable/search_state_empty" />

    <TextView
        android:id="@+id/tvSearchNotFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_huge"
        android:maxLines="2"
        android:text="@string/no_search_found"
        android:textAlignment="center"
        android:theme="@style/GothamBookHint" />

</LinearLayout>